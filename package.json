{
  "name": "react-ssr-starter-kit",
  "version": "1.0.0",
  "description": "Get started with React, Redux, and React-Router and Server Rendering!",
  "main": "index.js",
  "engines": {
    "node": ">=4.5.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean-ssr": "rimraf dist_ssr",
    "compile": "better-npm-run compile",
    "lint": "eslint bin build config server src tests",
    "lint:fix": "npm run lint -- --fix",
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "test:dev": "npm run test -- --watch",
    "deploy": "better-npm-run deploy",
    "deploy:dev": "better-npm-run deploy:dev",
    "deploy:dev-ssr": "better-npm-run deploy:dev-ssr",
    "deploy:prod": "better-npm-run deploy:prod",
    "deploy:prod-ssr": "better-npm-run deploy:prod-ssr",
    "copy:moqui": "better-npm-run copy:moqui",
    "codecov": "cat coverage/*/lcov.info | codecov"
  },
  "betterScripts": {
    "compile": {
      "command": "node bin/compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "nodemon bin/server --ignore dist --ignore coverage --ignore tests --ignore src",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy": {
      "command": "npm run lint && npm run test && npm run \"clean$SSR_SUFFIX\" && npm run compile",
      "env": {
        "DEPLOY": "true",
        "DEBUG": "app:*"
      }
    },
    "deploy:dev": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy:dev-ssr": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "development",
        "SSR": "true",
        "SSR_SUFFIX": "-ssr",
        "DEBUG": "app:*"
      }
    },
    "deploy:prod": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "deploy:prod-ssr": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "production",
        "SSR": "true",
        "SSR_SUFFIX": "-ssr",
        "DEBUG": "app:*"
      }
    },
    "copy:moqui": {
      "command": "rm -Rf $MOQUI_REACT_SSR_ROOT/dist && cp -R dist $MOQUI_REACT_SSR_ROOT && rm -Rf $MOQUI_REACT_SSR_ROOT/dist_ssr && cp -R dist_ssr $MOQUI_REACT_SSR_ROOT",
      "_comment": "Add .env file in root folder and configure set MOQUI_REACT_SSR_ROOT to parent folder dist and dist_ssr in moqui react ssr application."
    },
    "start": {
      "command": "node bin/server",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "node node_modules/.bin/jest --no-cache --coverage",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davezuko/react-redux-starter-kit.git"
  },
  "author": "David Zukowski <david@zuko.me> (http://zuko.me)",
  "license": "MIT",
  "dependencies": {
    "apollo-client": "^0.5.6",
    "babel-polyfill": "^6.16.0",
    "babel-runtime": "^6.11.6",
    "base-64": "^0.1.0",
    "debug": "^2.2.0",
    "graphql-tag": "^0.1.17",
    "ip": "^1.1.2",
    "normalize.css": "^5.0.0",
    "react": "^15.0.0",
    "react-apollo": "^0.7.2",
    "react-dom": "^15.0.0",
    "react-redux": "^5.0.1",
    "react-router": "^4.0.0-alpha.5",
    "redux": "^3.6.0",
    "redux-thunk": "^2.0.0",
    "webpack": "^2.2.0-rc.2",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.3.13",
    "better-npm-run": "^0.0.13",
    "connect-history-api-fallback": "^1.3.0",
    "css-loader": "^0.26.0",
    "cssnano": "^3.7.4",
    "enzyme": "^2.6.0",
    "eslint": "^3.0.1",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-react": "^4.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-react": "^6.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "fs-extra": "^1.0.0",
    "html-webpack-plugin": "^2.22.0",
    "identity-obj-proxy": "^3.0.0",
    "imports-loader": "^0.7.0",
    "jest": "^18.0.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.1.1",
    "postcss-loader": "^1.1.1",
    "react-addons-test-utils": "^15.0.0",
    "react-test-renderer": "^15.4.0",
    "redbox-react": "^1.2.10",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.6",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.12.2",
    "yargs": "^6.4.0"
  }
}
